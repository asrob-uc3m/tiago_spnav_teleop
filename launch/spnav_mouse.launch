<!-- adapted from spacenav_node/launch/classic.launch -->
<launch>
    <arg name="name" default="spacenav_node"/>

    <node pkg="spacenav_node" type="spacenav_node" name="$(arg name)" output="screen">
        <param name="zero_when_static" value="true"/>
        <param name="static_count_threshold" value="30"/>
    </node>
</launch>
